Struct_#assert [Type_:val] is struct_ {
    Struct_?:maybe_struct = [val].get_struct;
    if ([maybe_struct].is_null) {
        abort "Expected value with a struct type_, found a value of type_ {}" % [val].stringify;
    };
    return [maybe_struct].unwrap;
}

