Val#NOT [Val:val] {
    return basic val [val.type_] [bitwise not [val.type_] [[val].get]];
}

Val#[Val:a] AND [Val:b] {
    assert type_ equality [a], [b];
    return basic val [a.type_] [emit [[[a].get] AND [[b].get] to [[a.type_].ir]]];
}

Val#[Val:a] OR [Val:b] {
    assert type_ equality [a], [b];
    return basic val [a.type_] [emit [[[a].get] OR [[b].get] to [[a.type_].ir]]];
}

Val#[Val:a] XOR [Val:b] {
